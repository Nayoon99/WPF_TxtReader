<Window x:Class="TxtReader.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TxtReader.ViewModel"
        Title="파일 version 자동화 연습"
        Height="500"
        Width="900">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <!-- 전체 레이아웃: 상단 / 본문 / 하단 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- ================= 상단 ================= -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="TXT Reader Application"
                       FontSize="22"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <Button Content="📂 Select File"
                    Command="{Binding SelectFileCommand}"
                    Width="160"
                    Padding="12,6"
                    HorizontalAlignment="Center"
                    Background="#2D7DFF"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- ================= 본문 ================= -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 : 파일 목록 -->
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding Files}"
                      SelectedItem="{Binding SelectedFile}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0,0,10,0"
                      GridLinesVisibility="Horizontal"
                      Background="WhiteSmoke">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title"
                                        Binding="{Binding Title}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Size"
                                        Binding="{Binding Size}"
                                        Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- 오른쪽 : 파일 내용 -->
            <Border Grid.Column="1"
                    Background="White"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    Padding="10">

                <StackPanel>
                    <TextBlock Text="{Binding SelectedFile.Title}"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding SelectedFile.Content}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ================= 하단 : 변경 이력 ================= -->
        <GroupBox Grid.Row="2"
                  Header="변경 이력"
                  Margin="0,10,0,0">

            <ListBox ItemsSource="{Binding ChangeLogs}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,4">
                            <TextBlock Text="{Binding Time, StringFormat=HH:mm:ss}"
                                       FontSize="11"
                                       Foreground="Gray"/>
                            <TextBlock Text="{Binding Message}"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</Window>
