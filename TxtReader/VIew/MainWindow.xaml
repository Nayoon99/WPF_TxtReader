<Window x:Class="TxtReader.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TxtReader.ViewModel"
        xmlns:local="clr-namespace:TxtReader.View"
        mc:Ignorable="d"
        Title="파일 version 자동화 연습" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="TXT Reader Application"
               FontSize="22"
               FontWeight="SemiBold"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

            <Button Content="📂 Select File"
            Command="{Binding SelectFileCommand}"
            Width="140"
            Padding="12,6"
            HorizontalAlignment="Center"
            Background="#2D7DFF"
            Foreground="White"
            BorderThickness="0"
            Cursor="Hand"/>
        </StackPanel>


        <!-- ================= 본문 영역 (좌우 분할) ================= -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== 왼쪽 : 파일 목록 ===== -->
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding Files}"
                      SelectedItem="{Binding SelectedFile}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0,0,10,0"
                      GridLinesVisibility="Horizontal"
                      Background="WhiteSmoke">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title"
                                        Binding="{Binding Title}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Size"
                                        Binding="{Binding Size}"
                                        Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- ===== 오른쪽 : 파일 내용 미리보기 ===== -->
            <Border Grid.Column="1"
                    Background="White"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    Padding="10">

                <StackPanel>
                    <TextBlock Text="{Binding SelectedFile.Title}"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding SelectedFile.Content}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>


</Window>
